<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/deviceDetailBg"
                android:fitsSystemWindows="true">

    <com.hl.foundation.library.widget.CTopBar
        android:id="@+id/topbar"
        style="@style/style_topbar"
        app:mTitleText="@string/title_device_detail"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/device_detail_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:text="编号:11111111"
            android:textColor="@color/deviceDetailTxt"/>

        <TextView
            android:id="@+id/device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/device_number"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:text="设备类型:编号"
            android:textColor="@color/deviceDetailTxt"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/device_"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/device_type"
                  android:layout_marginLeft="@dimen/dp_30"
                  android:layout_marginTop="@dimen/dp_20"
                  android:text="设备编号:"
                  android:textColor="@color/deviceDetailTxt"
        />
        <TextView
            android:id="@+id/device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:text="已佩戴"
            android:textColor="@color/colorTxtWhite"/>

        <TextView
            android:id="@+id/device_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/device_status"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:drawablePadding="@dimen/dp_10"
            android:text="阿克苏"
            android:textColor="@color/deviceDetailTxt"/>

        <View
            android:id="@+id/view"
            style="@style/divider_thin"
            android:layout_below="@+id/device_"
            android:layout_marginTop="@dimen/dp_20"/>

        <TextView
            android:id="@+id/storage_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/ic_start_time"
            android:drawablePadding="@dimen/dp_10"
            android:text="入库时间:2017-05-23 09:35:20"
            android:textColor="@color/deviceDetailTxt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_divider"
            android:layout_below="@+id/storage_time"
            android:layout_marginBottom="@dimen/dp_40"/>
    </RelativeLayout>

</RelativeLayout>