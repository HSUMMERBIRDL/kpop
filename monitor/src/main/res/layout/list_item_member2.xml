<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/select_rec_white_gray"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">


    <LinearLayout
        android:id="@+id/ll_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_rec_white_gray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/header_defult_men" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名"
                android:textColor="@color/colorTxtGreen"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--  <TextView
                  android:id="@+id/txt_type"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:text="类型"
                  android:textColor="@color/colorTxtBlack"
                  android:textSize="14sp" />-->


            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:text="类型"
                android:textSize="14sp" />


        </LinearLayout>

        <!--  <TextView
              android:id="@+id/txt_sex"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:gravity="center_vertical"
              android:text="性别"
              android:textColor="@color/colorTxtGray"
              android:textSize="14sp" />-->

        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_sex_men"
            android:drawablePadding="5dp"
            android:text="性别"
            android:textColor="@color/colorTxtGray"
            android:textSize="14sp" />

        <com.hl.foundation.library.widget.CTextButton
            android:id="@+id/txt_send_moniter_command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="发送监听"
            android:textColor="@color/colorTxtWhite"
            android:background="@drawable/select_main_color"
            android:textSize="14sp" />
        <!--     <TextView
                 android:id="@+id/txt_status"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorTxtRed"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="5dp"
                 android:textStyle="bold"
                 android:gravity="center"
                 android:textSize="16sp"
                 android:text="是否监控"/>-->

    </LinearLayout>

    <View
        style="@style/divider_thin"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="是否监控"
        android:textColor="@color/colorTxtBlack"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_card_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="身份证号"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_device_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="设备编号"
        android:textSize="14sp" />

