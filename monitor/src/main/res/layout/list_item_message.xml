<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_rec_white_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="12dp"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/colorTxtGreen"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="12dp"
        android:text="未读" />
    <!--txt_time-->
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_status"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="3dp"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2017-05-15 14:51:20"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="注意各项工作检查注意各项工作检查注意各项工作检查"
        android:textColor="@color/color_content" />

    <View
        style="@style/divider_thin"
        android:layout_below="@+id/txt_news_content"
        android:layout_marginTop="10dp" />

</RelativeLayout>
