<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hl.foundation.library.widget.CTopBar
        android:id="@+id/topbar"
        style="@style/style_topbar"
        app:mIsLeftShow="true"
        app:mTitleText="文件上传">

    </com.hl.foundation.library.widget.CTopBar>


    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="一共有"
        android:textColor="@color/colorTxtBlack"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/txt_start_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始上传"
        android:textStyle="bold"
        android:textColor="@color/colorTxtWhite"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/select_main_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_reord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去录文件"
        android:textStyle="bold"
        android:textColor="@color/colorTxtWhite"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/select_main_color"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/txt_upload_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textStyle="bold"
        android:textColor="@color/colorTxtWhite"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/select_main_color"
        android:textSize="16sp" />


</LinearLayout>